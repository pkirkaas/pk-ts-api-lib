{
  "name": "pk-ts-api-lib",
  "author": "Paul Kirkaas",
  "license": "UNLICENSED",
  "description": "TS/JS Utilities for NodeJS Express APIs, including common & Node JS functions",
  "type": "module",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "default": "./dist/esm/index.js",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./tsconfig.cjs.json": "./tsconfig.cjs.json",
    "./tsconfig.json": "./tsconfig.json"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json && tsc -p ./tsconfig.cjs.json",
    "linkdev" : "npm link pk-ts-node-lib pk-ts-common-lib",
    "clean": "rm -rf ./dist ./node_modules package-lock.json && npm i",
    "monitor": "nodemon --exec \"npm run build\" --ext js,jsx,ts,tsx,sass,css --delay 5 --watch ./src",
    "null":"nothing"

  },
  "dependencies": {
    "bcrypt": "*",
    "body-parser": "*",
    "compression": "*",
    "connect-sqlite3": "^0.9.13",
    "cookie-parser": "*",
    "cors": "*",
    "evp_bytestokey": "*",
    "express": "*",
    "express-async-errors": "*",
    "express-list-endpoints": "^6.0.0",
    "jsonwebtoken": "*",
    "kill-port": "*",
    "pk-ts-node-lib": "git+https://github.com/pkirkaas/pk-ts-node-lib.git#working",
    "reflect-metadata": "*",
    "rxjs": "*",
    "serialize-error": "*"
  }
}
